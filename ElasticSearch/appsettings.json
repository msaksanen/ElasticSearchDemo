{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ElasticApm": {
    "ServerUrl": "http://localhost:8200/", // Адрес APM сервера в Docker (или localhost для локального запуска без докера)
    "ServiceName": "ElasticDemo", // Имя сервиса в Kibana
    "Environment": "Development",
    "TransactionSampleRate": 1.0 // Записывать 100% запросов (для продакшена ставят меньше)
  },

  "ElasticsSearchSettings": {
    //"Url": "http://elasticsearch:9200/",
    "Url": "http://localhost:9200/", //for non-Docker execution
    "DefaultIndex": "users",
    "Username": "",
    "Password": ""
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    }
  }
}
